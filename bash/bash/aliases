# vi:syntax=bash
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

alias dir='dir --color=auto'
alias vdir='vdir --color=auto'

alias ls='ls --color=auto'
alias ll='ls -alF'
alias la='ls -A'
alias lla='ls -la'
alias l='ls -CF'
alias sl='ls'

alias atp='apt'

alias nix-shell='nix-shell --pure -p'

# maybe fun aliases
alias owo='man'

# force bash to check the sudo command for aliases
alias sudo='sudo '

function mk..dir (){
	cd ../
	mkdir -pv $1
	cd $1
}

function makescript (){
	touch $1
	chmod +x $1
	vim $1
}

function gitvim () {
	vim $1
	git add $1
	echo "Commit Message: "
	read message
	git commit -m "$message"
}


function cdvim(){
	if [[ $# -eq 1 ]] ;
	then
		cd $(dirname $1)
		vim $(basename $1)
	else
		echo "Cannot open file because no"
	fi
}

function git(){
	case "$1" in
		"yeet") gcommand="push";;
		"Yeet")	gcommand="push --force-with-lease";;
		"YEET")	gcommand="push --force";;
		"yoink") gcommand="pull";;
		"YOINK") gcommand="pull --force";;
		*)	gcommand="${1:-help}";;
	esac
	shift
	command git $gcommand "$@"
}
